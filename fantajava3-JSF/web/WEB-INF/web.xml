<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>
            30
		</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<display-name>manager constraint</display-name>
		<web-resource-collection>
			<web-resource-name>Test</web-resource-name>
			<description>Test</description>
			<url-pattern>/manager/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>HEAD</http-method>
			<http-method>PUT</http-method>
			<http-method>OPTIONS</http-method>
			<http-method>TRACE</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description/>
			<role-name>beheerders</role-name>
		</auth-constraint>
		<!--<transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
	</security-constraint>
	<security-constraint>
		<display-name>office constraint</display-name>
		<web-resource-collection>
			<web-resource-name>test</web-resource-name>
			<description/>
			<url-pattern>/office/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>HEAD</http-method>
			<http-method>PUT</http-method>
			<http-method>OPTIONS</http-method>
			<http-method>TRACE</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description/>
			<role-name>klanten</role-name>
		</auth-constraint>
		<!--<transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
	</security-constraint>
    <security-constraint>
        <display-name>login forwarder</display-name>
        <web-resource-collection>
            <web-resource-name>Bank Forwarder</web-resource-name>
            <description/>
            <url-pattern>/login/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>beheerders</role-name>
            <role-name>klanten</role-name>
            </auth-constraint>
		<!--<transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
        </security-constraint>
    <login-config>
		<auth-method>FORM</auth-method>
		<realm-name>U wordt vriendelijk uw gegevens in te vullen</realm-name>
		<form-login-config>
			<form-login-page>/BankLogin.faces</form-login-page>
			<form-error-page>/error.html</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<description/>
		<role-name>beheerders</role-name>
	</security-role>
	<jsp-property-group>
		<url-pattern>/*.jsp</url-pattern>
		<el-ignored>false</el-ignored>
		<scripting-invalid>true</scripting-invalid>
	</jsp-property-group>
	<security-role>
		<description/>
		<role-name>klanten</role-name>
	</security-role>

	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>
</web-app>
